# IMPORTANT: when changing, keep in mind that remote version is modified by certbot!
# IMPORTANT: when changing, create backup of the server version and merge with latest
#            local copy that's moved over to the server.
server {
    listen 80;
    listen [::]:80;

    server_name stats.retrovizor.xyz www.stats.retrovizor.xyz;

    access_log /var/log/nginx/stats.retrovizor.xyz.access.log;
    error_log /var/log/nginx/stats.retrovizor.xyz.error.log;

    root /var/www/stats.retrovizor.xyz/html;
    error_page 404 /404/index.html;
    index index.html;

    expires 1y;
    add_header Cache-Control "public";

    location / {
        try_files $uri $uri/ =404;
    }
}
